<h1>Posts</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>User</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.description %></td>
      <td><%= post.user.name %></td>
<!--      <td><%#= link_to 'Show', post %></td>-->
      <td>
        <% if can? :read, post %>
          <%= link_to 'Show', post  %>
        <% end %>
      </td>
      <td>
        <% if can? :update, post %>
          <%= link_to 'Edit', edit_post_path(post) %>
        <% end %>
      </td>
      <td>
        <% if can? :destroy, post %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </td>


    </tr>
  <% end %>
  </tbody>
</table>

<br>

<% if can? :create, Post %>
  <%= link_to 'Make News', new_post_path %>
<% end %>
